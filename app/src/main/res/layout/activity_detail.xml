<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="0"

    android:background="@color/white">

    <View
        android:id="@+id/view"
        android:layout_width="408dp"
        android:layout_height="71dp"
        android:background="#4062B3"
        tools:layout_editor_absoluteX="2dp"
        tools:layout_editor_absoluteY="2dp" />

    <LinearLayout
        android:layout_width="413dp"
        android:layout_height="74dp"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <ImageButton
            android:id="@+id/menuButton"
            android:layout_width="60"
            android:layout_height="60"
            android:layout_gravity="center"
            android:backgroundTint="#00FFFFFF"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/menu_button2" />

        <ImageView
            android:id="@+id/logo"
            android:layout_width="0"
            android:layout_height="60"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:paddingLeft="10"
            android:paddingRight="64"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/font" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view"
        app:layout_constraintVertical_bias="1.0"
        tools:layout_editor_absoluteX="2dp">

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="책제목"
            android:textColor="@color/black"
            android:textSize="28" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_launcher_background" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="소장사항"
            android:textColor="#323232"
            android:textSize="18" />

        <LinearLayout
            android:id="@+id/Collection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/aboutBook_LOAN"
                android:layout_width="240dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="대출현황"
                android:textColor="#323232" />

            <TextView
                android:id="@+id/aboutBook2"
                android:layout_width="95dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="예약현황"
                android:textColor="#323232" />

        </LinearLayout>

        <View
            android:id="@+id/bar2"
            android:layout_width="400"
            android:layout_height="4"
            android:layout_gravity="center"
            android:background="@color/white"
            android:paddingVertical="0"
            android:paddingLeft="0"
            android:paddingRight="0" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="책소개"
            android:textColor="#323232"
            android:textSize="18" />

        <TextView
            android:id="@+id/aboutBook_LOAN"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView" />

        <View
            android:id="@+id/bar2"
            android:layout_width="400"
            android:layout_height="4"
            android:layout_gravity="center"
            android:background="@color/white"
            android:paddingVertical="0"
            android:paddingLeft="0"
            android:paddingRight="0" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="저자소개"
            android:textColor="#323232"
            android:textSize="18" />

        <TextView
            android:id="@+id/aboutAuthor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textColor="#302E2E" />

        <View
            android:id="@+id/bar3"
            android:layout_width="match_parent"
            android:layout_height="4"
            android:layout_gravity="center"
            android:background="@color/white"
            android:paddingVertical="0"
            android:paddingLeft="0"
            android:paddingRight="0" />

        <Button
            android:id="@+id/reviewBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="@color/white"
            android:elevation="20"
            android:text="리뷰 보기"
            android:textAlignment="center"
            android:textColor="#234BAC"
            android:textSize="16sp"
            android:textStyle="bold"
            app:cornerRadius="10" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
